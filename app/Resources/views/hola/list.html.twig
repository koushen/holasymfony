

{% extends 'base.html.twig' %}
{% block header %}
    <h1>lista de items</h1>
{% endblock %}
{% block body %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>name</th>
            <th>description</th>
        </tr>
        </thead>
        <tbody>

        {% for item in res %}
            <tr>
                <td><a href="{{ path('item', {'item': item.name}) }}">{{ item.name }}</a></td>
                <td>{{ item.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}